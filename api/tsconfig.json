{
    "extends": null, // Prevent inheriting from root tsconfig.json
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "lib": ["ES2016"],
        "types": ["node"], // Explicitly define only necessary types
        // "outDir": "../dist/api", // Let Vercel handle output location
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
